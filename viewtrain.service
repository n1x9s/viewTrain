[Unit]
Description=ViewTrain FastAPI Application
After=network.target

[Service]
User=deploy
Group=deploy
WorkingDirectory=/opt/viewtrain
Environment="PATH=/opt/viewtrain/venv/bin"
ExecStart=/opt/viewtrain/venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 8000 --workers 4
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target 